<?xml version="1.0"?>
<robot name="mobile_manipulator">

  <!-- ================= base chassis ================= -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0" ixz="0" iyy="0.4" iyz="0" izz="0.6"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.5 0.4 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.5 0.4 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= wheels (4) ================= -->

  <!-- Helper macro-like pattern omitted manually -->

  <!-- front-left wheel -->
  <link name="wheel_fl">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_fl_joint" type="continuous">
    <origin xyz="0.2 0.17 0.08"/>
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- front-right wheel -->
  <link name="wheel_fr">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_fr_joint" type="continuous">
    <origin xyz="0.2 -0.17 0.08"/>
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- rear-left wheel -->
  <link name="wheel_rl">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_rl_joint" type="continuous">
    <origin xyz="-0.2 0.17 0.08"/>
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- rear-right wheel -->
  <link name="wheel_rr">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.075" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <joint name="wheel_rr_joint" type="continuous">
    <origin xyz="-0.2 -0.17 0.08"/>
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ================= sensor mast ================= -->
  <link name="mast_link">
    <inertial>
      <mass value="0.7"/>
      <origin xyz="0 0 0.25"/>
      <inertia ixx="0.02" iyy="0.02" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <cylinder radius="0.03" length="0.5"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
  </link>

  <joint name="mast_joint" type="fixed">
    <origin xyz="0 0 0.1"/>
    <parent link="base_link"/>
    <child link="mast_link"/>
  </joint>

  <!-- ================= camera ================= -->
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.06 0.04 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.3 0.9 1"/>
      </material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0 0 0.5"/>
    <parent link="mast_link"/>
    <child link="camera_link"/>
  </joint>

  <!-- ================= arm (3 DOF) ================= -->

  <!-- shoulder -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.06 0.06 0.3"/>
      </geometry>
      <material name="red">
        <color rgba="0.9 0.3 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="joint1_shoulder" type="revolute">
    <origin xyz="0 0 0.1"/>
    <parent link="base_link"/>
    <child link="link1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <!-- elbow -->
  <link name="link2">
    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.05 0.05 0.3"/>
      </geometry>
      <material name="green">
        <color rgba="0.3 0.9 0.4 1"/>
      </material>
    </visual>
  </link>

  <joint name="joint2_elbow" type="revolute">
    <origin xyz="0 0 0.3"/>
    <parent link="link1"/>
    <child link="link2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

  <!-- wrist -->
  <link name="link3">
    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.04 0.04 0.3"/>
      </geometry>
      <material name="yellow">
        <color rgba="0.9 0.9 0.3 1"/>
      </material>
    </visual>
  </link>

  <joint name="joint3_wrist" type="revolute">
    <origin xyz="0 0 0.3"/>
    <parent link="link2"/>
    <child link="link3"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1"/>
  </joint>

</robot>
