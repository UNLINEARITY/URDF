<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="colored_box" params="name color size position">
    <link name="${name}">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="${size}"/>
        </geometry>
        <material name="${name}_mat">
            <color rgba="${color}"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="${size}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1"/>
        <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
      </inertial>
    </link>
    <joint name="${name}_joint" type="fixed">
        <parent link="base_link"/>
        <child link="${name}"/>
        <origin xyz="${position}" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>