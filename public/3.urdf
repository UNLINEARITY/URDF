<?xml version="1.0"?>
<robot name="simple_car">

  <!-- ================= base ================= -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
  </link>

  <!-- ================= wheels ================= -->

  <!-- front left wheel -->
  <link name="wheel_fl">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="wheel_fl_joint" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="0.2 0.15 0.08"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="5" velocity="20"/>
  </joint>

  <!-- front right wheel -->
  <link name="wheel_fr">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="wheel_fr_joint" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="0.2 -0.15 0.08"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="5" velocity="20"/>
  </joint>

  <!-- rear left wheel -->
  <link name="wheel_rl">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="wheel_rl_joint" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.2 0.15 0.08"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="5" velocity="20"/>
  </joint>

  <!-- rear right wheel -->
  <link name="wheel_rr">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="wheel_rr_joint" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.2 -0.15 0.08"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1000" upper="1000" effort="5" velocity="20"/>
  </joint>

</robot>
